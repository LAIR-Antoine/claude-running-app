<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.RunningCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/strava_orange</item>
        <item name="colorPrimaryVariant">@color/strava_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/strava_orange</item>
        <item name="colorSecondaryVariant">@color/strava_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/gray_100</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/gray_100</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_100</item>
        <item name="colorOnBackground">@color/gray_900</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <item name="colorSurfaceVariant">@color/gray_200</item>
        <item name="colorOnSurfaceVariant">@color/gray_700</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.RunningCalculator.CardView</item>
        <item name="textInputStyle">@style/Widget.RunningCalculator.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.RunningCalculator.Button</item>
        <item name="radioButtonStyle">@style/Widget.RunningCalculator.RadioButton</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.RunningCalculator.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Widget.RunningCalculator.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="Widget.RunningCalculator.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Widget.RunningCalculator.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="buttonTint">?attr/colorPrimary</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.RunningCalculator.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.RunningCalculator.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.RunningCalculator.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.RunningCalculator.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.RunningCalculator.Result" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>