<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RunningCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/strava_orange</item>
        <item name="colorPrimaryVariant">@color/strava_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/strava_orange</item>
        <item name="colorSecondaryVariant">@color/strava_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_900</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gray_800</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray_700</item>
        <item name="colorOnSurfaceVariant">@color/gray_400</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Customize component colors for dark theme -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_400</item>
        <item name="colorControlNormal">@color/gray_500</item>
        <item name="colorControlActivated">@color/strava_orange</item>
        <item name="colorControlHighlight">@color/ripple_color_dark</item>
    </style>
</resources>